<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="0"
                android:startColor="#25C7E0"
                android:endColor="#25C7E0"
                android:type="linear"></gradient>
        </shape>

    </item>
<item>
    <shape>
        <gradient
            android:angle="-90"
            android:startColor="#EFEFF1"
            android:centerColor="#E9E9EB"
            android:endColor="#D1D1D1"
            android:type="linear"></gradient>
    </shape>
</item>


</selector>